@media screen and (min-width: 720px)

  $gutter = 18px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter * .75)
  $margin-basic = ($gutter * 1.5)
  $margin-mid = ($gutter * 2)
  $margin-large = ($gutter * 3)

  $font-size-basic = 14px
  $font-size-extra = 36px
  $font-size-large = 27px
  $font-size-mid = 21px
  $font-size-small = 18px
  $font-size-tiny = 9px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker( 96%, $gutter, m)

  font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

  .mobile-only
    display: none !important

  // HEADER

  #main-nav-list-row
    justify-content: normal

  #logo
    transform: translateY(-($margin-basic))

  #logo-holder
    width: auto
    padding-left: $margin-tiny
    padding-right: $margin-tiny
    #logo
      display: inline-block

  #logo-holder-mobile
    display: none

  // ******************************************************

  // FRONT PAGE

  .frontpage-section-label-holder
    border-right: $border-style
    text-align: right

  .frontpage-section-label
    display: inline-block
    border-bottom: none
    padding-bottom: 0

  // ******************************************************

  // MASONRY

  .masonry-item
    width: 50%
    padding: 0 $margin-tiny $margin-basic

  #logo-holder.masonry-item
    width: 50%
