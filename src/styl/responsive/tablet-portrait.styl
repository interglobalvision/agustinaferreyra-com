@media screen and (min-width: 720px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 14px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid-maker( 96%, $gutter, m)

  font-sizes($font-size-basic)

  .mobile-only
    display: none !important

  // HEADER

  #header
    position: fixed
    top: 0
    left: 0
    width: 100vw
    z-index: 900

  #main-nav-list-row
    justify-content: normal

  #logo
    transform: translateY(-($margin-basic))

  #logo-holder
    width: auto
    padding-left: $margin-tiny
    padding-right: $margin-tiny
    #logo
      display: inline-block

  #logo-holder-mobile
    display: none

  // ******************************************************

  // FRONT PAGE

  .frontpage-section-label-holder
    border-right: $border-style
    text-align: right

  .frontpage-section-label
    display: inline-block
    border-bottom: none
    padding-bottom: 0

  // ******************************************************

  // MASONRY

  .masonry-item 
    width: 50%
    padding: 0 $margin-tiny $margin-basic

  #logo-holder.masonry-item
    width: 50%
