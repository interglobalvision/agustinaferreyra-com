// ******************************************************

// HEADER

#main-nav-list-row
  justify-content: space-between

// ******************************************************

// FRONT PAGE

.frontpage-section-label,
.exhibitions-section-label
  width: 100%
  border-bottom: $border-style
  text-transform: uppercase

// ******************************************************

// MASONRY

#masonry-holder
  &.hidden
    visibility: hidden

.masonry-item
  width: 100%
  padding: 0 ($gutter / 2) $margin-basic
  z-index: 0

#logo-holder.masonry-item
  width: 0

// ******************************************************

// CAROUSEL

.carousel-trigger
  cursor: pointer

#carousel-overlay
  background: rgba(255,255,255,1)
  position: fixed
  pointer-events: none
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  opacity: 0
  z-index: 1000
  transition: opacity 300ms ease-in-out

body.carousel-active
  position: absolute
  overflow-y: hidden
  #main-container
    position: absolute
  #carousel-overlay
    pointer-events: auto
    opacity: 1

.slick-carousel
  width: 100vw
  height: 100vh

.slick-list
  display: block
  position: relative
  margin: 0
  padding: 0

.slick-track
  position: relative
  top: 0
  left: 0
  display: block
  margin-left: auto
  margin-right: auto

.slide-content-holder
  width: 100vw
  height: 100vh
  .grid-column
    width: 100%
    height: 100%
  img
    height: auto
    width: auto
    max-height: 80vh
    max-width: 80vw

.slick-arrow
  background-color: $color-black
  font-size: 0
  appearance: none
  width: $carousel-arrow-diameter
  height: $carousel-arrow-diameter
  border-radius: $carousel-arrow-diameter
  border: 0
  position: fixed
  top: calc("50vh - " + ($carousel-arrow-diameter / 2))
  z-index: 1200
  cursor: pointer
  padding: 0
  &:focus
    outline: 0

.slick-prev
  left: 3vw
  clip-path: polygon(-10% -10%,50% -10%,50% 110%,-10% 110%)

.slick-next
  right: 3vw
  clip-path: polygon(50% -10%,110% -10%,110% 110%,50% 110%)

// ******************************************************

// BLOG

#blog-info
  order: 2

#blog-posts
  order: 1
