#main-nav-list-row
  justify-content: space-between

// ******************************************************

// FRONT PAGE

.frontpage-section-label,
.exhibitions-section-label
  width: 100%
  border-bottom: $border-style
  padding-bottom: $margin-tiny
  text-transform: uppercase
