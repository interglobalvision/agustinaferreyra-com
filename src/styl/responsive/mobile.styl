$gutter = 14px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 1.5)
$margin-mid = ($gutter * 2)
$margin-large = ($gutter * 3)

$font-size-basic = 12px
$font-size-extra = 32px
$font-size-large = 18px
$font-size-mid = 16px
$font-size-small = 14px
$font-size-tiny = 8px

grid-maker(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

$border-style = 1px solid $color-black
$carousel-arrow-diameter = 50px

html, body
  height:100%
  width: 100vw

#main-container
  min-width: 100%

.border-top
  border-top: $border-style

.text-max-width
  p
    max-width: 30em

#postit
  position: absolute
  z-index: 1000
  width: 150px
  transform: rotate(-10deg)
  #postit-scale
    transition: transform 100ms ease-in-out
  &:hover
    cursor: move
    cursor: -webkit-grab
    cursor: -moz-grab
    cursor: grab
  &.grabbing
    cursor: -webkit-grabbing
    curosr: -moz-grabbing
    cursor: grabbing
    #postit-scale
      transform: scale(1.1)

.postit-image
  pointer-events: none
  user-select: none

.dot
  width: 9.8px
  height: 9.8px
  border-radius: 9.8px
  background-color: $color-black

#postit-dot
  position: absolute
  top: -10px
  left: 45%

.hover-dot
  .dot
    position: absolute
    top: 50%
    left: 50%
    visibility: hidden
    pointer-events: none
  &.show-dot
    .dot
      visibility: visible

#logo-holder
  z-index: 900
  width: 0
  padding: 0
  display: none
  .logo
    display: none
    visibility: hidden

.logo
  position: relative
  display: inline-block
  transform: translateY(-($margin-basic))
  width: 280px
  z-index: 900

.logo-svg
  width: 100%
  height: auto
  width: 280px

.logo-dot
  text-indent: 0
  position: absolute
  z-index: 900

